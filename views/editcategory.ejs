    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const nameInput = document.getElementById('categoryname');
            const descriptionInput = document.getElementById('description');
    
            nameInput.addEventListener('blur', () => validateInput('categoryname', /^[A-Za-z\s]+$/, 'categoryError', 'Name'));
            descriptionInput.addEventListener('blur', () => validateInput('description', /^.{1,100}$/, 'descriptionError', 'Description'));
        });
    
        function validateForm() {
            const isValidName = validateInput('categoryname', /^[A-Za-z\s]+$/, 'categoryError', 'Name');
            const isValidDescription = validateInput('description', /^.{1,100}$/, 'descriptionError', 'Description');
    
            if (!isValidName || !isValidDescription) {
                alert('Please enter valid information.');
                return false;
            }
            return true;
        }
    
        function validateInput(inputId, pattern, errorId, errorMessage) {
            const inputValue = document.getElementById(inputId).value.trim();
            const errorElement = document.getElementById(errorId);
    
            if (inputValue === '') {
                errorElement.innerText = errorMessage + ' is required.';
                return false;
            } else if (!pattern.test(inputValue)) {
                errorElement.innerText = 'Please enter a valid ' + errorMessage.toLowerCase() + '.';
                return false;
            } else {
                errorElement.innerText = '';
                return true;
            }
        }
    </script>
